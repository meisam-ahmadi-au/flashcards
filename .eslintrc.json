{
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": [
        "airbnb",
        "react-app",
        "plugin:prettier/recommended"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, {
            "extensions": [".js", ".jsx"]
        }],
        "react/destructuring-assignment": 1,
        "react/prop-types": 1,
        "react/prefer-stateless-function": 1
    },
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
        }
    }
}